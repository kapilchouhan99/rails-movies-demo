<div>
  <% if @page_tab == "movies" %>
    <h1>Listing all Movies</h1>
    <%= render :partial => "list", :movies => @movies %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% elsif @page_tab == "suggest" %>
    <% if @movies.any? %>
      <h1>Listing all Suggest Movies</h1>
      <%= render :partial => "list", :movies => @movies %>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% else %>
      <h1>You have not followed any Movie, Star and Genre yet.</h1>
    <% end %>
  <% elsif @page_tab == "genres" %>
    <h1>Listing all Genres</h1>
    <table>
     <tr>
      <th>Name</th>
      <th>Action</th>
     </tr>
     <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td>
        <div id="Genre-<%= genre.id %>">
          <%= render :partial => "movies/buttons", :locals => { object: genre, type: "Genre" } %>
        </div>
     </tr>
     <% end %>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% elsif @page_tab == "stars" %>
    <h1>Listing all Stars</h1>
    <table>
     <tr>
      <th>Name</th>
      <th>Action</th>
     </tr>
     <% @stars.each do |star| %>
     <tr>
      <td><%= star.name %></td>
      <td>
        <div id="Star-<%= star.id %>">
          <%= render :partial => "movies/buttons", :locals => { object: star, type: "Star" } %>
        </div>
     </tr>
     <% end %>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>
